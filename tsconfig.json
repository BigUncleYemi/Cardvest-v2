{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",   // This tells TypeScript where to resolve non-relative imports
    "paths": {
      "@*": ["src/*"],
      "@MixpanelAnalytics": ["src/MixpanelAnalytics.js"],
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@i18n/*": ["src/i18n/*"],
      "@routes/*": ["src/routes/*"],
      "@scenes/*": ["src/scenes/*"],
      "@theme/*": ["src/theme/*"],
      "@utils/*": ["src/utils/*"],
      "@env": ["src/env.js"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
